<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.0//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>
  <suppress checks="BooleanExpressionComplexity"
            files="WebsiteGenerator\.java"/>

  <!-- We group static variables with static methods, and then the instance variable and methods -->
  <suppress checks="DeclarationOrder"
            files="WebsiteGenerator\.java"/>

  <!-- The Website generator has embedded HTML, allow veeery long lines -->
  <suppress checks="LineLength"
            files="WebsiteGenerator\.java"/>

  <!-- The Website generator can write to System.out -->
  <suppress checks="RegexpMultiline"
            files="WebsiteGenerator\.java"/>

  <!-- The Website generator has a main method -->
  <suppress checks="UncommentedMain"
            files="WebsiteGenerator\.java"/>

</suppressions>
